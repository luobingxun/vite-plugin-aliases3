{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "lib": ["ES2020"],
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
